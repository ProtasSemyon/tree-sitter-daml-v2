sumList : [Int] -> Int
sumList list = case list of
  -- Базовый случай: пустой список
  [] -> 0
  
  -- Инфиксный оператор в паттерне:
  -- x (head) — это первый элемент
  -- xs (tail) — это остаток списка
  x : xs -> x + sumList xs
  
